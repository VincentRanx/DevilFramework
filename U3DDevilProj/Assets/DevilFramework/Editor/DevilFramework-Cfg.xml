<configuration>
  <folder>
    <ai-default>Assets/DevilFramework/Core/AIRepository/BehaviourTreeV2</ai-default>
    <ai-editor>Assets/DevilFramework/Editor/AIDesigner</ai-editor>
    <ai-export>Assets/Scripts/GameLogic/AIModules</ai-export>
    <ai-import>Assets/Scripts/GameLogic</ai-import>
  </folder>
  
  <type-pattern>
    <float default="0" alias="Single">^(\-|\+)?\d+(\.\d+)?$</float>
    <int default="0" alias="Int32">^(\-|\+)?\d+$</int>
    <bool default="false" alias="Boolean">^(true|false)$</bool>
    <name default="_">^[a-zA-Z_]+[a-zA-Z_ ]*$</name>
    <Vector2 default="(0,0)" alias="vector2">^\((\-|\+)?\d+(\.\d+)?,(\-|\+)?\d+(\.\d+)?)$</Vector2>
    <Vector3 default="(0,0,0)" alias="vector3">^\((\-|\+)?\d+(\.\d+)?,(\-|\+)?\d+(\.\d+)?,(\-|\+)?\d+(\.\d+)?\)$</Vector3>
    <string default="" alias="String">[\w\W]*</string>
    <compare default="equal">^(greater|less|equal)$</compare>
  </type-pattern>

  <behaviour-category>
    <Composite>
      <color>#3358b6</color>
    </Composite>

    <Task>
      <color>#9740ce</color>
    </Task>
    
    <Service>
      <color>#564262</color>
    </Service>

    <Condition>
      <color>#8e578d</color>
    </Condition>

    <GameManager>
      <color>#8e00ae</color>
    </GameManager>
  </behaviour-category>

</configuration>